        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans KR', sans-serif;
            line-height: 1.6;
            color: #333;
            transition: all 0.3s ease;
        }
        body.no-scroll { overflow: hidden; }
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .content {
            padding: 30px;
            border-radius: 10px;
        }
        .navigation-controls {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 10px;
            padding: 15px;
            border-radius: 8px;
        }
        .nav-button-group {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 5px;
        }
        .chapter-links-container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 6px;
        }
        .nav-label {
            font-weight: 600;
            font-size: 14px;
            margin-right: 9px;
        }
        .toggle-btn {
            background: none;
            border: none;
            padding: 2px 0;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: underline;
            text-decoration-color: currentColor;
            text-decoration-thickness: 1px;
            text-underline-offset: 2px;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .toggle-btn:hover {
            opacity: 0.8;
        }
        .chapter-link {
            display: inline-block;
            padding: 5px;
            text-decoration: none;
            border: none;
            border-bottom: 1px solid #007bff;
            font-weight: 500;
            font-size: 10px;
            transition: all 0.3s ease;
            min-width: 25px;
            text-align: center;
        }
        .chapter-link:hover, .chapter-link.active {
            transform: scale(1.1);
        }
        .chapter-content h2 {
            margin-bottom: 30px;
            text-align: left;
            font-size: 28px;
            border: none !important; /* 테두리 강제로 제거 */
            outline: none; /* 포커스 시 나타날 수 있는 아웃라인 제거 */
        }
        .story-content {
            text-align: justify;
        }
        .english-paragraph {
            font-size: 18px;
            line-height: 1.8;
            margin-bottom: 1.5em;
        }
        .english-paragraph:last-child {
            margin-bottom: 0;
        }
        .sentence-unit {
            cursor: pointer;
            border-radius: 3px;
            transition: background-color 0.2s;
        }
        .word-link {
            position: relative;
            display: inline;
            font-weight: 600;
            padding: 1px 3px;
            border-radius: 3px;
            cursor: pointer;
            text-decoration: underline;
        }
        .word-link:hover {
            opacity: 0.8;
        }
        .word-target-kr {
            color: #dc3545;
            font-weight: 600;
            background: rgba(220, 53, 69, 0.1);
            padding: 1px 3px;
            border-radius: 3px;
        }
        .bottom-sheet-overlay, .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            display: flex;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }
        .popup-overlay {
            z-index: 2000;
            align-items: center;
            justify-content: center;
        }
        .bottom-sheet-overlay {
            z-index: 1000;
            align-items: flex-end;
        }
        .bottom-sheet-overlay.show, .popup-overlay.show {
            opacity: 1;
            visibility: visible;
        }
        .bottom-sheet-panel {
            width: 100%;
            max-width: 1000px;
            height: 65vh;
            border-radius: 16px 16px 0 0;
            box-shadow: 0 -4px 20px rgba(0,0,0,0.15);
            transform: translateY(100%);
            transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            display: flex;
            flex-direction: column;
        }
        .bottom-sheet-overlay.show .bottom-sheet-panel {
            transform: translateY(0);
        }
        .bottom-sheet-header {
            padding: 10px 20px;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-shrink: 0;
        }
        .bottom-sheet-title {
            font-size: 16px;
            font-weight: 600;
        }
        .bottom-sheet-content {
            padding: 0 20px 20px 20px;
            overflow-y: auto;
        }
        .word-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }
        .word-table th {
            position: sticky;
            top: 0;
            z-index: 1;
            border-bottom: 2px solid #dee2e6;
            padding: 10px;
            text-align: left;
            font-weight: 600;
        }
        .word-table td {
            padding: 10px;
            border-bottom: 1px solid #dee2e6;
            text-align: left;
        }
        .index-item {
            display: flex;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #f1f3f4;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        .index-item:last-child {
            border-bottom: none;
        }
        .index-number {
            font-weight: 600;
            margin-right: 12px;
            min-width: 25px;
        }
        .index-title {
            font-size: 14px;
        }
        .popup-content {
            max-width: 400px;
            width: 90%;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            animation: slideIn 0.3s ease;
            position: absolute;
            transform: translate(0%, -100%);
        }
        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px 25px 5px;
            border-bottom: 2px solid #f1f3f4;
        }
        .popup-header h3 {
            font-size: 24px;
            margin: 0;
        }
        .close-btn {
            background: none;
            border: none;
            color: #999;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            transition: color 0.3s ease;
            padding: 0;
            line-height: 1;
        }
        .close-btn:hover {
            color: #333;
        }
        .popup-body {
            padding: 20px 25px;
        }
        .popup-body p {
            margin: 0;
            font-size: 16px;
            line-height: 1.5;
        }
        .theme-selector {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            padding: 10px 0;
        }
        .theme-btn {
            padding: 8px 16px;
            border-radius: 20px;
            border: none;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        .theme-btn:hover {
            opacity: 0.9;
        }
        .theme-btn.active {
            background-color: #007bff;
            color: white;
        }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
