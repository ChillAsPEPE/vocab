        }
        .shelf {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: flex-end;
            gap: 40px 30px;
            padding: 30px 10px;
            border-radius: 10px;
        }
        .book-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
        }
        .book-cover {
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
            width: 190px;
            height: 260px;
            background-size: cover;
            background-position: center;
            text-decoration: none;
            padding: 20px;
            border-radius: 4px 6px 6px 4px;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            position: relative;
            overflow: hidden;
            border-left: 3px solid rgba(0,0,0,0.2);
        }
        .book-cover:hover {
            transform: translateY(-12px) scale(1.05) rotate(1deg);
        }
        .book-text-content {
            position: relative;
            z-index: 1;
            padding: 5px 10px;
            border-radius: 3px;
        }
        .book-title {
            font-size: 20px;
            font-weight: 600;
            line-height: 1.2;
            margin-bottom: 15px;
            display: block;
        }
        .book-subtitle {
            font-size: 16px;
            font-weight: 600;
            opacity: 0.9;
            display: block;
        }
        .nameplate {
            font-size: 12px;
            font-weight: 600;
            padding: 4px 12px;
            border-radius: 2px;
            max-width: 180px;
            text-align: center;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        /* ÌÖåÎßà ÏÑ†ÌÉù UI */
        .theme-toggle {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
        }
        .toggle-btn {
            background: none;
            border: none;
            padding: 2px 0;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: underline;
            text-decoration-color: currentColor;
            text-decoration-thickness: 1px;
            text-underline-offset: 2px;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .toggle-btn:hover {
            opacity: 0.8;
        }
        .theme-selector {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            padding: 10px 0;
        }
        .theme-btn {
            padding: 8px 16px;
            border-radius: 20px;
            border: none;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        .theme-btn:hover {
            opacity: 0.9;
        }
        .theme-btn.active {
            background-color: #007bff;
            color: white;
        }
        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.4);
            display: flex;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            z-index: 2000;
            align-items: center;
            justify-content: center;
        }
        .popup-overlay.show {
            opacity: 1;
            visibility: visible;
        }
        .popup-content {
            max-width: 400px;
            width: 90%;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            animation: none;
            position: relative;
        }
        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px 25px 5px;
            border-bottom: 2px solid #f1f3f4;
        }
        .popup-header h3 {
            font-size: 24px;
            margin: 0;
        }
        .close-btn {
            background: none;
            border: none;
            color: #999;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            transition: color 0.3s ease;
            padding: 0;
            line-height: 1;
        }
        .close-btn:hover {
            color: #333;
        }
        .popup-body {
            padding: 20px 25px;
        }
        @keyframes slideIn { from { transform: translateY(-50px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

